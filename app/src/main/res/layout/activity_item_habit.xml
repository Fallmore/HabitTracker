<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Иконка привычки -->
        <ImageView
            android:id="@+id/ivHabitIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="16dp" />

        <!-- Информация о привычке -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHabitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Название привычки"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHabitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Описание привычки"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/tvHabitStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Серия: 0 дней"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Кнопка отметки выполнения -->
        <CheckBox
            android:id="@+id/cbHabitCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сделано"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</androidx.cardview.widget.CardView>